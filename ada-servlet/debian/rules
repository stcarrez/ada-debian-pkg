#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

$(foreach line,$(shell sed -n '\
  s/^ gnat, gnat-\([0-9.]\+\),$$/ \
    GNAT_VERSION:=\1 \
  /p;\
  s/^Package: libada-servlet\([0-9.]\+\)$$/ \
    soname:=libada_servlet.so.\1 \
  /p;\
  ' debian/control),$(eval $(line)))

DH_VERBOSE=1
export DH_OPTIONS=-v

include debian/rules.inc

ADAFLAGS += -gnatafno -gnatVa -gnatwa

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- --enable-shared

override_dh_auto_build-arch:
	make all

servlet_SRCDIR := src
servlet_LNAME = libada_servlet
servlet_SONAME = libada_servlet.so.1.2.0
servlet_ANAME = libada_servlet.a
servlet_LIB_PKG = libada-servlet1.2.0
servlet_DEV_PKG = libada-servlet7-dev
servlet_GPR = servlet.gpr

servlet_aws_SRCDIR := src/aws
servlet_aws_LNAME = libada_servlet_aws
servlet_aws_SONAME = libada_servlet_aws.so.1.2.0
servlet_aws_ANAME = libada_servlet_aws.a
servlet_aws_LIB_PKG = libada-servlet-aws1.2.0
servlet_aws_DEV_PKG = libada-servlet-aws7-dev
servlet_aws_GPR = servlet_aws.gpr

servlet_unit_SRCDIR := servlet_unit
servlet_unit_LNAME = libada_servlet_unit
servlet_unit_SONAME = libada_servlet_unit.so.1.2.0
servlet_unit_ANAME = libada_servlet_unit.a
servlet_unit_LIB_PKG = libada-servlet-unit1.2.0
servlet_unit_DEV_PKG = libada-servlet-unit7-dev
servlet_unit_GPR = servlet_unit.gpr

# To debug an instantiation, replace eval with error:
$(foreach library, \
  servlet servlet_aws servlet_unit \
  ,$(eval $(call library_template)))
