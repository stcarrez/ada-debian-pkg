#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

$(foreach line,$(shell sed -n '\
  s/^ gnat, gnat-\([0-9.]\+\),$$/ \
    GNAT_VERSION:=\1 \
  /p;\
  s/^Package: libada-wiki\([0-9.]\+\)$$/ \
    soname:=libada_wiki.so.\1 \
  /p;\
  ' debian/control),$(eval $(line)))

DH_VERBOSE=1
export DH_OPTIONS=-v

include debian/rules.inc

ADAFLAGS += -gnatafno -gnatVa -gnatwa

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- --enable-shared

override_dh_auto_build-arch:
	make all

wiki_SRCDIR := src
wiki_LNAME = libada_wiki
wiki_SONAME = libada_wiki.so.1.1.0
wiki_ANAME = libada_wiki.a
wiki_LIB_PKG = libada-wiki1.1.0
wiki_DEV_PKG = libada-wiki7-dev
wiki_GPR = wiki.gpr

# To debug an instantiation, replace eval with error:
$(foreach library, \
  wiki \
  ,$(eval $(call library_template)))
