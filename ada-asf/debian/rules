#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

$(foreach line,$(shell sed -n '\
  s/^ gnat, gnat-\([0-9.]\+\),$$/ \
    GNAT_VERSION:=\1 \
  /p;\
  s/^Package: libada-asf\([0-9.]\+\)$$/ \
    soname:=libada_asf.so.\1 \
  /p;\
  ' debian/control),$(eval $(line)))

DH_VERBOSE=1
export DH_OPTIONS=-v

include debian/rules.inc

ADAFLAGS += -gnatafno -gnatVa -gnatwa

%:
	dh $@

override_dh_auto_configure:
	dh_auto_configure -- --enable-shared

override_dh_auto_build-arch:
	make all

asf_SRCDIR := src
asf_LNAME = libada_asf
asf_SONAME = libada_asf.so.1.2.0
asf_ANAME = libada_asf.a
asf_LIB_PKG = libada-asf1.2.0
asf_DEV_PKG = libada-asf7-dev
asf_GPR = asf.gpr

asf_unit_SRCDIR := asfunit
asf_unit_LNAME = libada_asf_unit
asf_unit_SONAME = libada_asf_unit.so.1.2.0
asf_unit_ANAME = libada_asf_unit.a
asf_unit_LIB_PKG = libada-asf-unit1.2.0
asf_unit_DEV_PKG = libada-asf-unit7-dev
asf_unit_GPR = asf_unit.gpr

# To debug an instantiation, replace eval with error:
$(foreach library, \
  asf asf_unit \
  ,$(eval $(call library_template)))
